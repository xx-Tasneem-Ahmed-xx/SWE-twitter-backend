{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDirs": ["./src", "./prisma"],
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": { "@/*": ["*"] },
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "prisma/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
