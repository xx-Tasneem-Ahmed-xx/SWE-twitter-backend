{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDirs": ["./src", "./prisma"],
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": { "@/*": ["*"] },
    "types": ["node", "express", "jest"], 
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
